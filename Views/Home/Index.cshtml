@* chat bot popup *@
<div id="chatPopup" style="display:none; position:absolute; top:300px; right:20px; width:300px; height:300px; background:#f9f9f9; border:1px solid #ccc; padding:10px; box-shadow:0 0 10px rgba(0,0,0,0.3); border-radius:8px; z-index:1000;">
	<h4 style="margin-top:0;">CyberBot</h4>
	<div id="chatBox" style="height:200px; overflow-y:auto; background:#fff; padding:10px; border:1px solid #ccc; margin-bottom:10px; font-size:90%;"></div>
	<input type="text" id="userInput" placeholder="Type your question..." style="width:70%; padding:5px;">
	<button onclick="sendMessage()" style="padding:5px 10px; border-radius:5px">Send</button>
</div>


@* the script for user input, all te questions or input that the user enters...the questions are limited to information *@
<script>
	function toggleChat() {
	  const chat = document.getElementById("chatPopup");
	  chat.style.display = (chat.style.display === "none" ? "block" : "none");
	}

	function sendMessage() {
	  const input = document.getElementById("userInput");
	  const chatBox = document.getElementById("chatBox");
	  const userMsg = input.value.trim();

	  if (!userMsg) return;

	  // Display user message
	  chatBox.innerHTML += `<div><strong>You:</strong> ${userMsg}</div>`;

	  // Bot simulated response
	  setTimeout(() => {
		const botReply = getBotReply(userMsg);
		chatBox.innerHTML += `<div><strong>CyberBot:</strong> ${botReply}</div>`;
		chatBox.scrollTop = chatBox.scrollHeight;
	  }, 600);

	  input.value = "";
	}
	//all the questions, we as developer can add more questions and answers to the bot, but this function only picks up keywords
	function getBotReply(msg) {
	  msg = msg.toLowerCase();
	  if (msg.includes("hello") || msg.includes("hi")) return "Hello! I'm CyberBot. Ask me anything about cyber threats.";
	  if(msg.includes("about")) return "I can dicuss various aspects related to cyber security, threats and types of threats";
	  if (msg.includes("cyber threat")) return "A cyber threat is any malicious act that seeks to damage data, steal data, or disrupt digital life.";
	  if(msg.includes("cyber security")) return "Cyber security is the practice of protecting systems, networks, and programs from digital attacks.";
	  if(msg.includes("types of threats") || msg.includes("type of threats")) return "Common types include malware, social engineering, phishing, ransomware, and denial-of-service (DoS) attacks";
      if(msg.includes("phishing")) return "Phishing is a type of cyber attack where attackers impersonate legitimate organizations to steal sensitive information.";
	  if(msg.includes("malware")) return "Malware is malicious software designed to harm, exploit, or otherwise compromise a computer system.";
	  if(msg.includes("ransomware")) return "Ransomware is a type of malware that encrypts a victim's files and demands payment for the decryption key.";
	  if(msg.includes("social engineering")) return "Social engineering is a manipulation technique that exploits human psychology to gain confidential information.";
	  if(msg.includes("denial of service") || msg.includes("dos")) return "A denial-of-service (DoS) attack is an attempt to make a machine or network resource unavailable to its intended users.";
	  if(msg.includes("protect") || msg.includes("protection") || msg.includes("prevent")) return "To protect against cyber threats, use strong passwords, keep software updated, and be cautious with emails and links. Install anti-virus protection software";
	  if(msg.includes("thank") || msg.includes("thanks")) return "You're welcome! If you have more questions, feel free to ask.";
	  return "I'm still learning! Try asking something about cyber threats or protection.";
	}
</script>


